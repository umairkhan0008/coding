<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Weight</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |mob|%>
      <tr>
        <th scope="row">1</th>
        <td><%=  mob.weight%></td>
        <td><%=  link_to "Edit",  edit_product_path(mob.id)%></td>
        <td><%=  link_to "Show", product_path(mob.id)%></td>
        <td><%=  button_to  'Delete', product_path(mob), method: 'delete' %></td>
    <% end%>
  </tbody>
</table>
