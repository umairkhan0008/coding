<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @bills.each do |bil|%>
      <tr>
        <th scope="row">1</th>
        <td><%= bil.product%></td>
        <td><%=  link_to "Edit",  edit_bill_path(bil.id)%></td>
        <td><%=  link_to "Show", bill_path(bil.id)%></td>
        <td><%=  button_to  'Delete', bill_path(bil), method: 'delete' %></td>
    <% end%>
  </tbody>
</table>
